<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="CourtInvitor.Views.AdminExistsCourts"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:m="clr-namespace:CourtInvitor.Models"
    xmlns:vm="clr-namespace:CourtInvitor.ViewModels"
    x:DataType="vm:AdminExistsCourtsVM">
    <Grid>
        <!--  Background Image  -->
        <Image
        Grid.RowSpan="1"
        Grid.ColumnSpan="1"
        Aspect="AspectFill"
        Source="background.png" />
        <!--  Back Arrow Button  -->
        <Button
        FontFamily="MaterialSymbols"
        Text="{StaticResource IconArrow_left_alt}"
        FontSize="28"
        TextColor="White"
        HorizontalOptions="End"
        VerticalOptions="Start"
        Margin="5"
        ZIndex="1"
        BackgroundColor="Transparent"
        Command="{Binding NavBackHomeCommand}"/>
        <CollectionView
    ItemsSource="{Binding Courts}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="m:AdminExistsCourtsModel">
                    <Button
                Style="{StaticResource DateButtonStyle}"
                Margin="10"
                FontSize="18"
                Text="{Binding CourtText}" 
                Command="{Binding Source={RelativeSource AncestorType={x:Type vm:AdminExistsCourtsVM}}, Path=CourtSelectedCommand}"
                        CommandParameter="{Binding CourtText}"/>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>