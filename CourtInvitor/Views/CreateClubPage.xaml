<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CourtInvitor.Views.CreateClubPage"
             xmlns:m="clr-namespace:CourtInvitor.Models"
    xmlns:vm="clr-namespace:CourtInvitor.ViewModels"
    x:DataType="vm:CreateClubPageVM">
    <Grid>
        <!--  Background Image  -->
        <Image
         Grid.RowSpan="1"
         Grid.ColumnSpan="1"
         Aspect="AspectFill"
         Source="background.png" />
        <!--  Back Arrow Button  -->
        <Button
         FontFamily="MaterialSymbols"
         Text="{StaticResource IconArrow_left_alt}"
         FontSize="28"
         TextColor="White"
         HorizontalOptions="End"
         VerticalOptions="Start"
         Margin="5"
         ZIndex="1"
         BackgroundColor="Transparent"
         Command="{Binding NavBackHomeCommand}"/>
        <ScrollView>
            <StackLayout Padding="20">
                <Label Text="Club Name" Style="{StaticResource LabelStyle}"/>
                <Entry Text="{Binding ClubName}" Style="{StaticResource EntryStyle}"/>

                <Label Text="Location" Style="{StaticResource LabelStyle}"/>
                <Entry Text="{Binding Location}" Style="{StaticResource EntryStyle}"/>

                <Label Text="Phone" Style="{StaticResource LabelStyle}"/>
                <Entry Text="{Binding Phone}" Style="{StaticResource EntryStyle}"/>

                <Label Text="Email" Style="{StaticResource LabelStyle}"/>
                <Entry Text="{Binding Email}" Style="{StaticResource EntryStyle}"/>

                <Label Text="Courts Count" Style="{StaticResource LabelStyle}"/>
                <Picker ItemsSource="{Binding CourtsNumbers}" SelectedItem="{Binding CourtsCount}" />

                <Button Text="Save Club" Command="{Binding SaveCommand}" Style="{StaticResource ButtonStyle}"/>

                <Label Text="{Binding StatusMessage}" Style="{StaticResource LabelStyle}" TextColor="Red"/>
            </StackLayout>
        </ScrollView>
    </Grid>
</ContentPage>