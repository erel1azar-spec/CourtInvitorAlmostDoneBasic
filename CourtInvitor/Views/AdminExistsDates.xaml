<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="CourtInvitor.Views.AdminExistsDates"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:m="clr-namespace:CourtInvitor.Models"
    xmlns:vm="clr-namespace:CourtInvitor.ViewModels"
    x:DataType="vm:AdminExistsDatesVM">

    <Grid>
        <Image
            Grid.RowSpan="1"
            Grid.ColumnSpan="1"
            Aspect="AspectFill"
            Source="background.png" />
        <Button
            Margin="5"
            BackgroundColor="Transparent"
            Command="{Binding NavBackHomeCommand}"
            FontFamily="MaterialSymbols"
            FontSize="28"
            HorizontalOptions="End"
            Text="{StaticResource IconArrow_left_alt}"
            TextColor="White"
            VerticalOptions="Start"
            ZIndex="1" />
        <CollectionView
            ItemsSource="{Binding Dates}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="m:AdminExistsDatesModel">
                    <Button
                        Style="{StaticResource DateButtonStyle}"
                        Margin="10"
                        FontSize="18"
                        Text="{Binding DateText}" 
                        Command="{Binding Source={RelativeSource AncestorType={x:Type vm:AdminExistsDatesVM}}, Path=DateSelectedCommand}"
                        CommandParameter="{Binding DateText}"/>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>